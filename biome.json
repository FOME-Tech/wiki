{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "files": {
    "includes": [
      "**",
      "!**/.devcontainer",
      "!**/.vscode",
      "!**/node_modules",
      "!**/.docusaurus",
      "!**/build",
      "!**/pdf",
      "!**/biome.json"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "useEnumInitializers": "off",
        "noNonNullAssertion": "off",
        "noDefaultExport": "off",
        "useNodejsImportProtocol": "off"
      },
      "suspicious": {
        "noConsole": { "level": "off", "options": { "allow": ["log"] } }
      },
      "nursery": {},
      "complexity": {
        "noForEach": "off"
      },
      "correctness": {
        "noNodejsModules": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 100,
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "all"
    }
  }
}
